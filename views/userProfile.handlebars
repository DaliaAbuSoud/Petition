<div class="userProfileBody">

    <section class="userProfileWrapper">

        <div class="userProfile-menu-line">
            <a href="petition" class="userProfile-home-button">
                <img src="/assets/home-btn.png" alt="home-button-image"></a>
            <div class="userProfile-menuLinks">
                <a href="/logout">Logout</a>
                <a href="/signers">Supporters</a>

            </div>
        </div>



        <h1 class="userProfileHeader">User Profile</h1>

        <section class="userProfileSection">

            <button type="button" class="editProfileBtn">Edit Profile</button>
            <p class="incorrectPass profileFailed"></p>
            <p class="successMsg profileUpdated"></p>

            <form class="userProfile-InputFields">
                <label>First Name</label>
                <input type="text" name="firstName" value="{{firstName}}" class="profileUserInput" required
                    disabled="true">
                <label>Last Name</label>
                <input type="text" name="lastName" value="{{lastName}}" class="profileUserInput" required
                    disabled="true">
                <label>City</label>
                <input type="text" name="city" value="{{city}}" class="profileUserInput" required disabled="true">
                <label>Country</label>
                <input type="text" name="country" value="{{country}}" class="profileUserInput" required disabled="true">
                <label>Age</label>
                <input type="text" name="age" value="{{age}}" class="profileUserInput" required disabled="true">
                {{!-- <label>Password</label>
                <input type="password" name="password" class="profileUserInput" disabled="true"> --}}

                <button type="submit" class="profileSubmitBtn">Submit</button>

                <a href="/petition" class="return">Return To Petition</a><br>
                <a href="/unsign" class="unsign">___Un-Sign___</a>
            </form>


        </section>

