    <section class="petition-wrapper">

        <div class="petition-menu-line">
            <a href="petition" class="petition-home-button">
                <img src="/assets/home-btn.png" alt="home-button-image"></a>
            <div class="petition-menuLinks">
                <a href="/logout">Logout</a>
                {{#if sigAvailable}}
                <a href="/userProfile">Edit Profile</a>
                <a href="/signers">Supporters</a>
                {{/if}}


            </div>
        </div>


