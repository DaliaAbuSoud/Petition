                    <p class="name">{{firstname}} {{lastname}}</p>
                    <a href="bycity/{{city}}" class="city">{{city}}</a>
                    <a href="bycountry/{{country}}" class="country">{{country}}</a>
                    <p class="age">{{age}} years old</p>
                    <p class="dataAndTime">Signed on {{dateFormat ts "Do.MM.YYYY"}}</p>
                </div>
            </li>
            {{/signersData}}
            </ol>
    </section>
